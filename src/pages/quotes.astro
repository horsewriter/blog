---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get all quotes
const allQuotes = await getCollection('quotes');
const featuredQuotes = allQuotes.filter(quote => quote.data.featured);
const regularQuotes = allQuotes.filter(quote => !quote.data.featured);

// Get unique categories
const categories = [...new Set(allQuotes.map(quote => quote.data.category).filter(Boolean))];
---

<BaseLayout title="Quotes - Alex Mejía" description="A collection of inspiring quotes about writing, storytelling, and life">
  <!-- Header -->
  <section class="py-20 px-4 sm:px-6 lg:px-8 bg-gradient-to-br from-dark-900 via-dark-950 to-black">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold text-white mb-6">
        Quotes
      </h1>
      <p class="text-xl text-dark-300 mb-8 max-w-2xl mx-auto">
        Words that inspire, challenge, and illuminate the craft of writing and the art of living
      </p>
    </div>
  </section>

  <!-- Featured Quotes -->
  {featuredQuotes.length > 0 && (
    <section class="py-20 px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl sm:text-3xl font-bold text-white mb-12 text-center">Featured</h2>
        
        <div class="space-y-12">
          {featuredQuotes.map((quote) => (
            <blockquote class="bg-dark-900 rounded-lg p-8 border border-dark-800 text-center transform hover:scale-105 transition-all duration-200">
              <div class="text-4xl text-blue-400 mb-6">"</div>
              <p class="text-xl sm:text-2xl text-white leading-relaxed mb-6 font-light">
                {quote.data.quote}
              </p>
              <footer class="text-dark-400">
                {quote.data.author && (
                  <cite class="text-blue-400 font-medium not-italic">
                    — {quote.data.author}
                  </cite>
                )}
                {quote.data.source && (
                  <span class="block text-sm mt-1">
                    {quote.data.source}
                  </span>
                )}
                {quote.data.category && (
                  <span class="inline-block mt-3 px-3 py-1 bg-blue-600/20 text-blue-400 rounded-full text-xs font-medium">
                    {quote.data.category}
                  </span>
                )}
              </footer>
            </blockquote>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- All Quotes -->
  {regularQuotes.length > 0 && (
    <section class="py-20 px-4 sm:px-6 lg:px-8 bg-dark-900/30">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-2xl sm:text-3xl font-bold text-white mb-12 text-center">Collection</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {regularQuotes.map((quote) => (
            <blockquote class="bg-dark-900 rounded-lg p-6 border border-dark-800 hover:border-dark-700 transition-all duration-200 group">
              <div class="text-2xl text-blue-400 mb-4 group-hover:text-blue-300 transition-colors duration-200">"</div>
              <p class="text-lg text-white leading-relaxed mb-4">
                {quote.data.quote}
              </p>
              <footer class="text-dark-400 text-sm">
                {quote.data.author && (
                  <cite class="text-blue-400 font-medium not-italic">
                    — {quote.data.author}
                  </cite>
                )}
                {quote.data.source && (
                  <span class="block mt-1">
                    {quote.data.source}
                  </span>
                )}
                {quote.data.category && (
                  <span class="inline-block mt-2 px-2 py-1 bg-dark-800 text-dark-400 rounded text-xs">
                    {quote.data.category}
                  </span>
                )}
              </footer>
            </blockquote>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Categories -->
  {categories.length > 0 && (
    <section class="py-20 px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-2xl font-semibold text-white mb-8">Browse by Category</h2>
        <div class="flex flex-wrap justify-center gap-3">
          {categories.map((category) => (
            <span class="px-4 py-2 bg-dark-800 text-dark-300 rounded-full text-sm font-medium">
              {category}
            </span>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Add Quote CTA -->
  <section class="py-20 px-4 sm:px-6 lg:px-8 bg-gradient-to-r from-blue-900/20 to-purple-900/20">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-2xl sm:text-3xl font-bold text-white mb-4">Share a Quote</h2>
      <p class="text-lg text-dark-400 mb-8 max-w-2xl mx-auto">
        Have a favorite quote about writing, creativity, or life that inspires you? 
        I'd love to hear about it.
      </p>
      <a 
        href="/contact" 
        class="inline-block bg-blue-600 hover:bg-blue-700 text-white px-8 py-4 rounded-lg font-medium transition-all duration-200 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-dark-950"
      >
        Get In Touch
      </a>
    </div>
  </section>
</BaseLayout>